<!DOCTYPE html>
<html>

<%	function vrniTip(kolicina){
		if(kolicina > 0){
			return 'donated';
		} else if(kolicina < 0){
			return 'took';
		} else {
			return 'nedefinirano';
		}
	}	%>

	<head>
		<title>Record Overview</title>
		<meta charset="utf-8" />
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	</head>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	<body>
		<% include nav.ejs %>

			<div style="padding:25px">
				<h3 style="padding-bottom:10px">Record overview</h3>
				<% for(var i = 0; i < items.length; i++) { %>
					<hr />
					<div style="float:none">
						<span><%= items[i].DATUM_IN %> - <strong><%= items[i].CITIZEN_NAME %></strong> <%= vrniTip(items[i].KOLICINA) %> <strong><%= Math.abs(items[i].KOLICINA) %> <%= items[i].NAZIV %></strong></span>
						<span style="float:right">Added by: <%= items[i].USERNAME %></span>
					</div>

					<% } %>

			</div>
	</body>

</html>