<!DOCTYPE html>
<html>

<head>
	<title>Add record</title>
	<meta charset="utf-8" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<body>
	<% include nav.ejs %>
		<div style="padding:25px">
			<h3 style="padding-bottom:10px">Add record</h3>
			<form action="/donations/new" method="POST" enctype="multipart/form-data" style="width:350px">
				<div class="radio">
					<label><input type="radio" name="Tip" id="Tip" value="P" checked required> Plus</label>
				</div>
				<div class="radio">
					<label><input type="radio" name="Tip" id="Tip" value="M" required> Minus</label>
				</div>
				<div class="form-group">
					<label for="Citizen">Select Citizen</label>
					<select id="Citizen" name="Citizen" class="form-control" required>
					<% for(var i = 0; i < citizens.length; i++) { %>
						<option value="<%= citizens[i].CITIZEN_ID %>"><%= citizens[i].CITIZEN_NAME %></option>
					<% } %>
				</select> <br />
				</div>
				<div class="form-group">
					<label for="Resurs">Select resource</label>
					<select id="Resurs" name="Resurs" class="form-control" required>
					<% for(var i = 0; i < resources.length; i++) { %>
						<option value="<%= resources[i].RES_ID %>"><%= resources[i].NAZIV %></option>
					<% } %>
				</select> <br />
				</div>
				<div class="form-group">
					<label for="Kolicina">Quantity</label>
					<input type="number" class="form-control" id="Kolicina" name="Kolicina" required /> <br />
				</div>
				<button type="submit" class="btn btn-default">Submit</button>
			</form>
		</div>
</body>

</html>